<% layout('layouts/boilerplate') %>

  <div id="map" style="width: 100%; height: 500px;">

  </div>

    <h1>CAMPGROUNDS</h1>
    <hr>
    <div style="margin-left: 40%;"">
      <a  href="/campgrounds/new"><button class="btn btn-success">Add Campground</button></a>

    </div>
    <hr>

      <%for(let campground of campgrounds){%>
          <div class="card" mb-3>
            <div class="row">
              <div class="col-md-4">
                <%if(campground.images.length){%>
                  <img src="<%= campground.images[0].url %>" alt="" class= "img-fluid">
                <%}else{%>
                  <img src="" alt="" class= "img-fluid">
                <%}%>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= campground.title %></h5>
                  <p class="card-text"><%= campground.description %></p>
                  <p>
                    <small class="text-muted"><%= campground.location %></small>
                  </p>
                  <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View <%= campground.title %></a>
                </div>
              </div>
            </div>
          </div>
      <%}%>

      <script>
        const mapToken= '<%-process.env.MAPBOX_TOKEN%>';
      </script>
      <script src="/javascripts/clusterMap.js"></script>
